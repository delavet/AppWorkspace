    <Grid>
        <Border x:Name="lv5"
                Height="50"
                Width="50"
                CornerRadius="25"
                PointerEntered="lv5_PointerEntered"
                PointerPressed="lv5_PointerPressed"
                >
            <Border.RenderTransform>
                <ScaleTransform CenterX="25"
                                CenterY="25"
                                ScaleX="0"
                                ScaleY="0"
                                x:Name="scale5"/>
            </Border.RenderTransform>
            <Border.Background>
                <SolidColorBrush x:Name="BGlv5"
                                 Color="#FFF11515"/>
            </Border.Background>
        </Border>
        <Border x:Name="lv4"
                Height="40"
                Width="40"
                CornerRadius="20"
                PointerEntered="lv4_PointerEntered"
                PointerPressed="lv4_PointerPressed"
